        {% assign pagesection = page.url | remove:'.html' | split:'/' %}
        {% assign titlesection = subnode | downcase %}
        {% for item in pagesection limit:1 offset:1 %}
          {% assign pagesection = item %}
        {% endfor %}
        {% if pageitem.url == page.url or pagesection == titlesection %}
          <li class="active"><a href="{{ pageitem.url }}" >{{ pageitem.title }}</a></li>
        {% else %}
          <li><a href="{{ pageitem.url }}" >{{ pageitem.title }}</a></li>
        {% endif %}
      {% endif %}
    {% endfor %}
  {% endif %}
{% endfor %}
